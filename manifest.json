{
  "manifest_version": 2,
  "name": "SwordCut",
  "version": "0.3.0",
  "description": "/ws --> Word Shortcuts to save time typing.",
  "icons": {
    "128": "images/sword128.png",
    "48": "images/sword48.png",
    "16": "images/sword16.png"
  },

  "browser_action": {
    "default_icon": "images/sword16.png",
    "default_title": "SwordCut"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["scripts/content.js"]
    }
  ],

  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },

  "permissions": ["storage"],

  "browser_specific_settings": {
    "gecko": {
      "id": "2103F315-ECF9-4028-9C86-F16EB8C16661"
    }
  }
}
